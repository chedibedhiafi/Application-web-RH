@model ApplicationCore.Domain.Situation

@{
    ViewData["Title"] = "BFPME360 - Créer une nouvelle situation";
}

<h4>
    Créer une nouvelle situation
</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="nomSituation" class="control-label">
                    Nom de la situation<span class="text-danger">*</span>
                </label>
                <input asp-for="nomSituation" class="form-control" />
                <span asp-validation-for="nomSituation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">
        Retour à la liste
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
