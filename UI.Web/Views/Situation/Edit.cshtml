@model ApplicationCore.Domain.Situation

@{
    ViewData["Title"] = "BFPME360 - Modifier une situation";
}

<h4>Modifier une situation</h4>


<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.SituationId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="nomSituation" class="control-label"></label>
                <input asp-for="nomSituation" class="form-control" />
                <span asp-validation-for="nomSituation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">
        Retour à la liste
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}