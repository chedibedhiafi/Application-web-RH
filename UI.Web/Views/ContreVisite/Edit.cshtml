@model ApplicationCore.Domain.ContreVisite

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifier ContreVisite</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.ContreVisiteId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EffectuerPar" class="control-label"></label>
                <select asp-for="EffectuerPar" class="form-control" asp-items="ViewBag.EffectuerPar"></select>
                <span asp-validation-for="EffectuerPar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Avis" class="control-label">

                </label>
                <input asp-for="Avis" class="form-control" />
                <span asp-validation-for="Avis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label">

                </label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomDoc" class="control-label">

                </label>
                <input asp-for="NomDoc" class="form-control" />
                <span asp-validation-for="NomDoc" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DoneOrNot" /> @Html.DisplayNameFor(model => model.DoneOrNot)
                </label>

                
            <div class="form-group">
                <label asp-for="CongesFk" class="control-label">
                    Congé<span class="text-danger">*</span>
                </label>
                <select asp-for="CongesFk" class="form-control" asp-items="ViewBag.Conges"></select>
            </div>
            <input type="hidden" asp-for="CongesFk" value="@ViewBag.SelectedConges.CongesId" />

        



            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
