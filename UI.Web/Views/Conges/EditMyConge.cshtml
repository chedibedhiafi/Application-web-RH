@model ApplicationCore.Domain.Conges

@inject ApplicationCore.Interfaces.IServiceEmployees se
@inject ApplicationCore.Interfaces.IServiceFonctionEmployee sfe

@{
    string mail = User.Identity.Name;
    var employee = se.GetMany().FirstOrDefault(e => e.Email == mail);
    ViewData["Title"] = "BFPME360 - Modifier mon congé";
}



<h4>Modifier Mon congé -- Mon solde restant: @employee.CreditConges </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditMyConge">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="DateDebut" class="control-label"></label>
                <input asp-for="DateDebut" class="form-control" />
                <span asp-validation-for="DateDebut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFin" class="control-label"></label>
                <input asp-for="DateFin" class="form-control" />
                <span asp-validation-for="DateFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeConges" class="control-label"></label>
                <select asp-for="TypeCongesFk" class="form-control" asp-items="ViewBag.TypeCongesFk"></select>
                <span asp-validation-for="TypeCongesFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Raison" class="control-label"></label>
                <input asp-for="Raison" class="form-control" />
                <span asp-validation-for="Raison" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MesConges">
        Retour à la liste
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
