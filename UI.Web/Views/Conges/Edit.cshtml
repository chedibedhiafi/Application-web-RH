@model ApplicationCore.Domain.Conges

@{
    ViewData["Title"] = "BFPME360 - Modifier un congé";
}



<h4>Modifier Conge</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="DateDebut" class="control-label"></label>
                <input asp-for="DateDebut" class="form-control" />
                <span asp-validation-for="DateDebut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFin" class="control-label"></label>
                <input asp-for="DateFin" class="form-control" />
                <span asp-validation-for="DateFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeConges" class="control-label"></label>
                <select asp-for="TypeCongesFk" class="form-control" asp-items="ViewBag.TypeCongesFk"></select>
                <span asp-validation-for="TypeCongesFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Raison" class="control-label"></label>
                <input asp-for="Raison" class="form-control" />
                <span asp-validation-for="Raison" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employees" class="control-label"></label>
                <select asp-for="IdEmployees" class="form-control" asp-items="ViewBag.IdEmployees"></select>
                <span asp-validation-for="IdEmployees" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmePar" class="control-label"></label>
                <select asp-for="ConfirmePar" class="form-control" asp-items="ViewBag.ConfirmePar"></select>
                <span asp-validation-for="ConfirmePar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RemplassePar" class="control-label"></label>
                <select asp-for="RemplassePar" class="form-control" asp-items="ViewBag.RemplassePar"></select>
                <span asp-validation-for="RemplassePar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeConfirmation" class="control-label"></label>
                <select asp-for="TypeConfirmationFk" class="form-control" asp-items="ViewBag.TypeConfirmationFk"></select>
                <span asp-validation-for="TypeConfirmationFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">
        Retour à la liste
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
