@model ApplicationCore.Domain.Absence

@{
    ViewData["Title"] = "Edit";
}

<h4>Modifier Absence</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
            <div class="form-group">
                <label asp-for="nbAbsence" class="control-label"></label>
                <input asp-for="nbAbsence" class="form-control" />
                <span asp-validation-for="nbAbsence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeJustificatif" class="control-label"></label>
                <select asp-for="TypeJustificatifFk" class="form-control" asp-items="ViewBag.TypeJustificatifFk"></select>
                <span asp-validation-for="TypeJustificatifFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employees" class="control-label"></label>
                <select asp-for="EmplyeesFk" class="form-control" asp-items="ViewBag.EmplyeesFk"></select>
                <span asp-validation-for="EmplyeesFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">
        Retour à la liste
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
