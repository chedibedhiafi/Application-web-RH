@model ApplicationCore.Domain.TypeConges

@{
    ViewData["Title"] = "BFPME360 - Modifier un type de congé";
}

<h1>Modifier un type congé</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.TypeCongesId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label asp-for="Designation" class="control-label"></label>
                <input asp-for="Designation" class="form-control" />
                <span asp-validation-for="Designation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nbMaximumdeJour" class="control-label"></label>
                <input asp-for="nbMaximumdeJour" class="form-control" />
                <span asp-validation-for="nbMaximumdeJour" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="NeedsCv" /> @Html.DisplayNameFor(model => model.NeedsCv)
                </label>
         
            <div class="text-danger" id="error-message"></div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">
        Retour à la liste
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
}