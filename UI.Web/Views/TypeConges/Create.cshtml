@model ApplicationCore.Domain.TypeConges

@{
    ViewData["Title"] = "BFPME360 - Créer un nouveau type de congé";
}

<h4>
    Créer un nouveau type de congé
</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Designation" class="control-label">
                    Designation<span class="text-danger">*</span>
                </label>
                <input asp-for="Designation" class="form-control" />
                <span asp-validation-for="Designation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nbMaximumdeJour" class="control-label">
                    Nombre maximum de jours<span class="text-danger">*</span>
                </label>
                <input asp-for="nbMaximumdeJour" class="form-control" />
                <span asp-validation-for="nbMaximumdeJour" class="text-danger"></span>
            </div>
           <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="NeedsCv" /> @Html.DisplayNameFor(model => model.NeedsCv)
                </label>

            <!-- Employee list based on NecessiteCv -->
          
           

            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">
        Retour à la liste
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
   
}