@model ApplicationCore.Domain.SoldeConges

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<div>
    <p>Are you sure you want to delete this record?</p>
    <dl class="row">
        <dt class="col-sm-2">Nombre de jours:</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Nom du Solde:</dt>
        <dd class="col-sm-10">@Model.Nom</dd>

        <dt class="col-sm-2">Is Activated:</dt>
        <dd class="col-sm-10">@Model.IsActivated</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
