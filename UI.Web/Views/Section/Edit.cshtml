@model ApplicationCore.Domain.Section

@{
    ViewData["Title"] = "BFPME360 - Modifier un département";
}

<h1>Modifier un département</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.SectionId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NomSection" class="control-label"></label>
                <input asp-for="NomSection" class="form-control" />
                <span asp-validation-for="NomSection" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ParentSectionId" class="control-label">Parent Department</label>
                <select asp-for="ParentSectionId" class="form-control" asp-items="ViewBag.Departments">
                    <option value="">No parent</option> <!-- Option to set it to null -->
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">
        Retour à la liste
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
