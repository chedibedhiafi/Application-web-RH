@model ApplicationCore.Domain.Genre

@{
    ViewData["Title"] = "Create";
}

<h4>Créer Genre</h4>
<a href="/Home/Index" class="btn btn-primary">Home</a>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
            <div class="form-group">
                <label asp-for="NomGenre" class="control-label">
                    NomGenre<span class="text-danger">*</span>
                </label>
                <input asp-for="NomGenre" class="form-control" />
                <span asp-validation-for="NomGenre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
