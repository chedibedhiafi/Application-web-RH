@model ApplicationCore.Domain.Genre

@{
    ViewData["Title"] = "Edit";
}

<h4>Modifier Genre</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      
            <div class="form-group">
                <label asp-for="NomGenre" class="control-label"></label>
                <input asp-for="NomGenre" class="form-control" />
                <span asp-validation-for="NomGenre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
